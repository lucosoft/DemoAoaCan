#include <string.h>
#include <stdio.h>

#include "board.h"
#include "canpt.h"
#include "AndroidAccessoryHost.h"

/******************************************************************************
 * Typdefs and defines
 *****************************************************************************/

#define DISCOVER_TIME_MS (5000)

/******************************************************************************
 * Local variables
 *****************************************************************************/

static uint32_t msTicks = 0;
//static uint32_t lastDiscover = 0;

static uint32_t msTicksL = 0;

CAN_MSG_Type txMsg;
CAN_MSG_Type rxMsg;


/******************************************************************************
 * Local functions
 *****************************************************************************/

uint32_t getMsTicks(void)
{
  return msTicks;
}

void SysTick_Handler(void) {
  msTicks++;
  msTicksL++;

}

void check_failed(uint8_t *file, uint32_t line)
{
  /* User can add his own implementation to report the file name and line number,
	 ex: printf("Wrong parameters value: file %s on line %d\r\n", file, line) */

  /* Infinite loop */
  while(1);
}

/******************************************************************************
 * Public functions
 *****************************************************************************/

int main (void)
{

  SysTick_Config(SystemCoreClock / 1000);

//  canpt_init();
  canpt_init(&txMsg, &rxMsg);



  while(1)
  {
	canpt_task();

    if (100 < msTicksL)
    {
    	msTicksL = 0;


//    	canpt_sendMessage(LPC_CAN1, CANPT_NODE_CAN1_UNIQUE_ID, 8);

//    	canpt_sendMessage(LPC_CAN1, &txMsg, CANPT_NODE_CAN1_UNIQUE_ID, 8);
    }

  }


}

